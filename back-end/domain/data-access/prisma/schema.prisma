generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url= env("DATABASE_URL")
}

model User{
    id Int  @id @default(autoincrement())
    email String @unique
    password String
    profile Profile? //why '?'
}

model Profile {
    id Int @id @default(autoincrement())
    user User @relation(fields: [userId], references: [id])
    userId Int @unique
    username String
    bio String
    createdAt DateTime
    latestActivity DateTime
    likedResources Int[]
}

